#!/bin/bash
# Start working on the simple project

#      _            _      _   _                                     
#     | | __ _  ___| | __ | | | | __ _ _ __ ___  _ __ ___   ___ _ __ 
#  _  | |/ _` |/ __| |/ / | |_| |/ _` | '_ ` _ \| '_ ` _ \ / _ \ '__|
# | |_| | (_| | (__|   <  |  _  | (_| | | | | | | | | | | |  __/ |   
#  \___/ \__,_|\___|_|\_\ |_| |_|\__,_|_| |_| |_|_| |_| |_|\___|_|   
                                                                   

# Vars
export p=~/Projects/jack-hammer
export ph=$joy
export pa=$p/app
export pb=$p/bin
export pd=$p/doc
export pt=$p/test

# Aliases
alias proot="cd $p"
alias papp="cd $pa"
alias pbin="cd $pb"
alias pdoc="cd $pd"
alias ptest="cd $pt"
alias eapp="e $pa"
alias ebin="e $pb"
alias edoc="e $pd"
alias etest="e $pt"
alias tres='tresults'
alias s='search'

# Path
export _OLD_VIRTUAL_PATH=\
$pb:\
$pt:\
/usr/bin:\
/sbin:\
/bin:\
~/bin:\
.

# Directory
cd $p

# Show the banner
figlet 'Jack Hammer'

# Use virtualenv
[ 'seaman-chute' == `hostname` ] &&  . $p/env/bin/activate
echo "python = `which python`"
echo 
path

# Status
git status

